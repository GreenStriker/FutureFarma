@model IEnumerable<vms.entity.StoredProcedureModel.Spstock>
@*@using X.PagedList.Mvc.Core;
    @using X.PagedList;*@
@using vms.entity.viewModels
@{
    ViewData["Title"] = "STOCK INFORMATION";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var session = Context.Session.GetComplexData<vms.entity.viewModels.vmSession>("session");
}
@using Inventory.Utility

<div class="product-status mg-tb-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <div class="col-md-10 ">
                        <h4>STOCK INFORMATION</h4>
                    </div>
                        <div class="col-md-2 ">
                            <div class="form-group">
                                <input id="btnprint" class="btn  btn-success" style="margin-top:00px;" type="button" value="Print" />
                            </div>
                        </div>
                        <br />

                        <div id="print">


                            <div class="col-xs-12">
                                <div class="row " style="text-align:center">

                                    <h3>@session.BranchName</h3>

                                </div>

                            </div>
                            <table class="table  table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        @*<th>Vendor</th>*@
                                        <th>Total Purchase</th>
                                        <th>Total Sold</th>
                                        <th>Purchase return</th>
                                        <th>Sales return</th>
                                        <th> In Stock</th>
                                    </tr>
                                </thead>

                                @if (Model.Any())
                                {
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td class="text-center">
                                                    @item.Purchase
                                                </td>
                                                <td class="text-center">
                                                    @item.Sold
                                                </td>
                                                <td class="text-center">
                                                    @item.PurchaseReturn
                                                </td>
                                                <td class="text-center">
                                                    @item.SalesRetun
                                                </td>
                                                <td class="text-center">
                                                    @item.INStock
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                }

                                else
                                {
                                    <tr>
                                        <td colspan="10">
                                            <p style="text-align: center">No Records Found</p>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $("#btnprint").click(function () {

            var restorepage = $('body').html();
            var printcontent = $('#print').clone();
            $('body').empty().html(printcontent);
            window.print();
            $('body').html(restorepage);
        });
    </script>

}